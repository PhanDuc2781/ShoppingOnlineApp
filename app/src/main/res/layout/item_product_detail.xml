<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="5dp"
    android:elevation="3dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:background="@drawable/bg_cardview"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_ProductDetailShop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/ic_cart"
            app:riv_corner_radius="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/img_ProductDetailShop">

            <TextView
                android:id="@+id/txt_discountNoteDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_txt"
                android:fontFamily="@font/cambriab"
                android:padding="2dp"
                android:text="10% OFF"
                android:textColor="#FF5722" />

            <TextView
                android:id="@+id/txt_NameProductDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/cambriab"
                android:text="Name"
                android:textColor="#303132"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txt_DescriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_NameProductDetail"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/cambriab"
                android:text="Descriptions" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lin_1"
                android:layout_below="@+id/txt_DescriptionDetail"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_DiscountProductDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:fontFamily="@font/cambriab"
                    android:text="$10"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt_PriceProductDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/cambriab"
                    android:text="$20"
                    android:textSize="19dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/addToCartDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_1"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="3dp"
                android:drawableLeft="@drawable/ic_cart"
                android:fontFamily="@font/cambriab"
                android:text="Thêm vào giỏ."
                android:textColor="#000"
                android:textSize="17dp" />

        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>