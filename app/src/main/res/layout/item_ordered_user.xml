<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/bg_cardview">

        <TextView
            android:id="@+id/item_NameOrdered_User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/cambriab"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/totalPriceItem_OrderedUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_NameOrdered_User"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/cambriab"
            android:text="100$"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/priceEachItem_OrderedUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/cambriab"
            android:text="10$"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/quantityItemOrderedUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[2]"
            android:fontFamily="@font/cambriab"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/priceEachItem_OrderedUser"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>