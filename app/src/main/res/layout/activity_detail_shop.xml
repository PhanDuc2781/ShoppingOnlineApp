<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailShopActivity">

    <RelativeLayout
        android:id="@+id/rel_InformationShop"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/vinmart1">

        <RelativeLayout
            android:id="@+id/rel_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_activity">

            <ImageView
                android:id="@+id/back_DetailMainUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cambriab"
                android:gravity="center"
                android:text="Thông Tin"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <ImageView
                android:id="@+id/cart_UserShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_cart" />

            <TextView
                android:id="@+id/cart_Count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"

                android:background="@drawable/bg_cartcount"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_title">

            <TextView
                android:id="@+id/name_DetailShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cambriab"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone_DetailShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_DetailShop"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/cambriab"
                android:text="Phone"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/email_DetailShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_DetailShop"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/cambriab"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/address_DetailShop"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/email_DetailShop"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/cambriab"
                android:text="Address"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/open_DetailShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cambriab"
                android:text="Open"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/deliveryFee_DetailShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/open_DetailShop"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cambriab"
                android:text="Delivery Fee"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_DetailShop"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/phoneCallDetail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_baseline_local_phone_24" />

                <ImageView
                    android:id="@+id/check_Location"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_search_location"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_InformationShop"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp">

        <EditText
            android:id="@+id/search_DetailShop"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_edit"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:fontFamily="@font/cambriab"
            android:hint="Search.."
            android:padding="5dp"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/catrgory_DetailShop"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_alignParentEnd="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_category_pro" />

        <TextView
            android:id="@+id/txt_All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_DetailShop"
            android:fontFamily="@font/cambriab"
            android:text="Tất cả"
            android:textSize="18dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txt_All"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_DetailProductShop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </ScrollView>


    </RelativeLayout>




</RelativeLayout>